@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/GameHub")
            .build();

        let gameUpdateInterval;
        let currentFusePosition = @(gameState?.FusePosition ?? 0);
        let isTimerRunning = @(gameState?.IsTimerRunning.ToString().ToLower() ?? "false");

        connection.start().then(() => {
            connection.invoke("AddToGroup", "@Model.LobbyCode");
            console.log("SignalR baÄŸlantÄ±sÄ± kuruldu");
            
            // SÃ¼rekli gÃ¼ncelleme baÅŸlat
            startGameUpdates();
        }).catch(err => console.error("SignalR baÄŸlantÄ± hatasÄ±:", err));

        connection.on("UpdateGame", function () {
            console.log("Oyun gÃ¼ncellemesi alÄ±ndÄ±, sayfa yenileniyor...");
            location.reload();
        });

        // Sayfa kapatÄ±ldÄ±ÄŸÄ±nda gruptan Ã§Ä±k
        window.addEventListener("beforeunload", function() {
            connection.invoke("RemoveFromGroup", "@Model.LobbyCode");
            if (gameUpdateInterval) {
                clearInterval(gameUpdateInterval);
            }
        });

        function startGameUpdates() {
            // Her 250ms'de bir oyun durumunu gÃ¼ncelle
            gameUpdateInterval = setInterval(async () => {
                try {
                    const response = await fetch(`/Game/GetGameState?code=@Model.LobbyCode`);
                    const result = await response.json();
                    
                    if (result.success) {
                        updateGameUI(result);
                    }
                } catch (error) {
                    console.error("Oyun durumu gÃ¼ncelleme hatasÄ±:", error);
                }
            }, 250);
        }

        function updateGameUI(gameData) {
            // Fuse pozisyonunu gÃ¼ncelle
            currentFusePosition = gameData.fusePosition;
            updateFusePosition(currentFusePosition);
            
            // Timer durumunu gÃ¼ncelle
            const timerStatus = document.getElementById('timerStatus');
            if (gameData.isTimerRunning) {
                timerStatus.innerHTML = '<span class="badge bg-warning">â° SÃ¼re Ä°ÅŸliyor!</span>';
            } else {
                timerStatus.innerHTML = '<span class="badge bg-secondary">â¸ï¸ SÃ¼re Durdu</span>';
            }
            
            // SkorlarÄ± gÃ¼ncelle
            document.getElementById('team1Score').textContent = gameData.team1Score;
            document.getElementById('team2Score').textContent = gameData.team2Score;
            
            // SÄ±ra Sende butonunu gÃ¼ncelle
            const passTurnBtn = document.getElementById('passTurnBtn');
            if (passTurnBtn) {
                const currentPlayerName = '@currentPlayerName';
                const isMyTurn = gameData.currentTurn === currentPlayerName;
                
                if (isMyTurn) {
                    passTurnBtn.className = 'btn btn-success btn-lg';
                    passTurnBtn.disabled = false;
                    passTurnBtn.innerHTML = '<i class="fas fa-arrow-right"></i> SÄ±rayÄ± GeÃ§ ve SÃ¼reyi BaÅŸlat!';
                } else {
                    passTurnBtn.className = 'btn btn-secondary btn-lg';
                    passTurnBtn.disabled = true;
                    passTurnBtn.innerHTML = '<i class="fas fa-clock"></i> SÄ±ra Rakipte';
                }
            }
            
            // Oyun bittiÄŸinde
            if (!gameData.isGameActive && gameData.winner) {
                // Oyun sonu mesajÄ±nÄ± gÃ¶ster
                const gameStatus = document.getElementById('gameStatus');
                
                if (gameData.isGameCompleted) {
                    // Oyun tamamen bitti (5 puana ulaÅŸÄ±ldÄ±)
                    gameStatus.innerHTML = `<span class="badge bg-success fs-6">ğŸ† ${gameData.gameWinner == "Sol" ? "ğŸ”´ Sol TakÄ±m" : "ğŸ”µ SaÄŸ TakÄ±m"} Oyunu KazandÄ±!</span>`;
                } else {
                    // Sadece round bitti
                    gameStatus.innerHTML = `<span class="badge bg-warning fs-6">${gameData.winner == "Sol" ? "ğŸ”´ Sol TakÄ±m" : "ğŸ”µ SaÄŸ TakÄ±m"} Round'u KazandÄ±!</span>`;
                }
                
                // Interval'Ä± durdur
                if (gameUpdateInterval) {
                    clearInterval(gameUpdateInterval);
                }
                
                // SayfayÄ± yenile (oyun sonu ekranÄ± iÃ§in)
                setTimeout(() => {
                    location.reload();
                }, 2000);
            }
        }

        function updateFusePosition(position) {
            const movingPoint = document.getElementById('movingPoint');
            // Position -100 ile 100 arasÄ±, bunu 0-100% arasÄ± Ã§evir
            const percentage = ((position + 100) / 200) * 100;
            movingPoint.style.left = percentage + '%';
            
            // YumuÅŸak geÃ§iÅŸ iÃ§in CSS transition
            movingPoint.style.transition = 'left 0.2s ease-out';
            
            // Renk deÄŸiÅŸimi
            if (position < -80) {
                movingPoint.style.color = '#dc3545'; // KÄ±rmÄ±zÄ±
            } else if (position > 80) {
                movingPoint.style.color = '#0d6efd'; // Mavi
            } else {
                movingPoint.style.color = '#ffc107'; // SarÄ±
            }
        }

        // Pass Turn fonksiyonu
        async function passTurn() {
            const btn = document.getElementById('passTurnBtn');
            const spinner = document.getElementById('loadingSpinner');
            
            try {
                // Butonu devre dÄ±ÅŸÄ± bÄ±rak ve loading gÃ¶ster
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Ä°ÅŸleniyor...';
                spinner.classList.remove('d-none');
                
                const response = await fetch('/Game/PassTurn', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: 'code=@Model.LobbyCode'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    console.log("SÄ±ra baÅŸarÄ±yla geÃ§ildi ve sÃ¼re baÅŸlatÄ±ldÄ±");
                    // SignalR ile gÃ¼ncelleme gelecek, sayfa yenilenecek
                } else {
                    console.error("SÄ±ra geÃ§irme hatasÄ±:", result.message);
                    alert("Hata: " + result.message);
                    
                    // Butonu tekrar aktif et
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fas fa-arrow-right"></i> SÄ±rayÄ± GeÃ§ ve SÃ¼reyi BaÅŸlat!';
                }
            } catch (error) {
                console.error("Fetch hatasÄ±:", error);
                
                // Butonu tekrar aktif et
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-arrow-right"></i> SÄ±rayÄ± GeÃ§ ve SÃ¼reyi BaÅŸlat!';
            } finally {
                spinner.classList.add('d-none');
            }
        }

        function volunteerForTeam(team) {
            fetch('/Game/VolunteerForTeam', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    code: '@Model.LobbyCode',
                    team: team
                })
            })
            .then(response => response.json())
            .then(data => {
                if (!data.success) {
                    alert(data.message || 'Bir hata oluÅŸtu');
                }
            })
            .catch(error => {
                console.error('GÃ¶nÃ¼llÃ¼ olma hatasÄ±:', error);
                alert('Bir hata oluÅŸtu');
            });
        }

        // Sayfa yÃ¼klendiÄŸinde pozisyonu ayarla
        document.addEventListener('DOMContentLoaded', function() {
            updateFusePosition(currentFusePosition);
            
            // Round baÅŸlangÄ±Ã§ mesajÄ±nÄ± 5 saniye sonra otomatik gizle
            const roundStartAlert = document.querySelector('.alert-info');
            if (roundStartAlert) {
                setTimeout(() => {
